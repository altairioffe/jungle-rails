<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
<h2>
<% @line_items %>
</h2>
<h1> Product:
<%= @products[11].name %>
</h1>
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @product_list.each do |item| %>
         <h1> <%=  %></h1>
          <%= render 'item', product: @products[item[0]], quantity: item[1].quantity.to_i %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= number_to_currency(@order.total_cents / 100.00) %>
          </th>
        </tr>
      </tfoot> 
    </table>
  </div>



  <div class="order-summary jumbotron">
    <h4>Thank you for your order! A confirmation email has been sent to <%=@order.email%></h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
 